<% include ../partials/header %>	
<div class="row" style="margin-left:50px;margin-right:50px;">
<form action="<%= basurl %>/event/edit/<%= item[0].e_id %>" method="post" class="col s12" style="margin-top:21px">
	<input type="hidden" name="e_id" value="<%= item[0].e_id %>">
	<div class="form-group row">
		<label for="e_name" class="col-2 col-form-label">Name</label>
		<div class="col-10">
			<input type="text" name="e_name" value="<%= item[0].e_name %>" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="e_start_date" class="col-2 col-form-label">Start date</label>
		<div class="col-10">
			<input type="date" name="e_start_date" value="dt_s" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="e_end_date" class="col-2 col-form-label">End date</label>
		<div class="col-10">
			<input type="date" name="e_end_date" value="dt_e" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="e_date_added" class="col-2 col-form-label">Eve added date</label>
		<div class="col-10">
			<input type="date" name="e_date_added" value="item[0].e_date_added" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="e_date_modified" class="col-2 col-form-label">Modified date</label>
		<div class="col-10">
			<input type="date" name="e_date_modified" value="item[0].e_date_modified" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="e_desc" class="col-2 col-form-label">Description</label>
		<div class="col-10">
			<textarea name="e_desc" id="e_desc" cols="30" rows="4" class="form-control"><%= item[0].e_desc %></textarea>
		</div>
	</div>
	<div class="form-group row">
		<label for="location" class="col-2 col-form-label">Location</label>
		<div class="col-10">
			<textarea name="location" id="location" cols="30" rows="4" class="form-control"><%= item[0].location %></textarea>
		</div>
	</div>
	<div class="form-group row">
		<label for="location" class="col-2 col-form-label" style="coloe:#FFFFFF">Click to submit</label>
		<div class="col-10">
			<input type="submit" name="submit" value="save event" class="btn btn-primary btn-lg">
		</div>
	</div>
</form>	
</div>	
