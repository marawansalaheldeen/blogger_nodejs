<% include ../partials/header %>
<body>
<center><h1>All Blogs</h1>
<center>
<div class="row" style="margin-left:370px;margin-right:200px;">
<form action="<%=basurl%>/blogs" method="post" class="col s12" style="margin-top:21px">
	<input type="hidden" name="e_id" value="">
	<div class="form-group row">
		<div class="col-10">
			<input type="text" name="blog_name" placeholder="Blog Title" value="" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<textarea name="blog_body" placeholder="Type What You Want" id="location" cols="30" rows="4" class="form-control"></textarea>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Add Post" class="btn btn-primary btn-lg">
		</div>
	</div>
</form>	
</div>	
<% if(items.length > 0) { %>
	<% items.forEach(function(item,index) { %>
	<center>	
	<div style="height:300px;width:48%;background-color:#FFFFFF;border-style:solid;border-width:2px;border-color:cyan">
		<div style="height:30px;width:100%;background-color:#FFFFFF;text-align:left"><span  style="margin-left:3px;color:red;text-transform:capitalize;font-size:22; font-family: "Courier New"><%=item.u_name%></span>
		<% if (item.u_id==userid) { %>
		<a href="#" style="color:red;margin-left:63%">delete</a> <a href="#" style="color:#079A07">Edit</a>
		<% } %>
		</div>
		<div style="height:35px;width:100%;background-color:#FFFFFF;margin-top:5px;text-align:left"><span style="margin-left:8px;font-size:19"><%=item.B_name%></div>
		<div style="height:218px;width:98%;background-color:#C7B8B8;margin-top:4px"><span style="font-size:18"><%=item.B_body%><br></div>
		
	</div>
		
	<br>
	<% }); %>
<% }else{ %>
	<h1>No Posts Yet..</h1>
<%}%>	
</body>
