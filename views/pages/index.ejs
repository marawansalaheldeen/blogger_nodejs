<html>
<head>

	<title> <%= siteTitle %> - <%= pageTitle %> </title>
		
	<% include ../partials/head %>
	
</head>

<body style="background-color:#DCDCDC ">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="<%=basurl%>" style="color:cyan"><%= pageTitle %></a>

  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <a class="nav-link" href="<%=basurl%>">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="#">About</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="<%=basurl%>/profile/<%= username%>">profile</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="loginpage">logout</a>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>	

	<div class="row" style="margin-left:10px;margin-right:10px;">
		
		<div class="col s14">
			<div>
			<a href="/event/add" style="margin-top:21px" class="btn btn-success btn-lg">Add New Event</a> <center><h2><strong>All Events</strong></h2>
			</div>
		</div>
	</div>
	<br>
			
			
			
	<div class="">	
	<div class="col s12">
		<% if(items.length > 0) { %>
		<table class="table">	
		<thead>
			<tr>
			    <th style="width:1%;text-align:center">ID</th>
			    <th style="width:10%">Name</th>	
			    <th style="width:10%">Start Date</th>
			    <th style="width:10%">End Date</th>		
				<th style="width:10%">Description</th>
				<th style="width:10%">Location</th>
				<th solspan="2" style="width:20%;text-align:center">Actions</th>
			</tr>
		</thead>
		<tbody>	
				<% items.forEach(function(item,index) { %>
					<tr>
					<td style="width:1%;text-align:center"><%= index + 1 %></td>
					<td style="width:10%"><%= item.e_name%></td>
					<td style="width:10%"><%= item.e_start_date %></td>
					<td style="width:10%"><%= item.e_end_date %></td>
					<td style="width:10%"><%= item.e_desc %></td>
					<td style="width:10%"><%= item.location %></td>
					<td solspan="2" style="width:20%;text-align:center">
					<% if (item.u_id==userid) { %>							
						<a href="/event/edit/<%= item.e_id%>" class="btn btn-success">Edit</a>
						<a href="/event/delete/<%= item.e_id%>" class="btn btn-danger">Delete</a>
						
					<% } %>			
					</td>	
					</tr>
					<% }); %>
				</tbody>	
				</table>
					<% }else{ %>
					<!--<p><strong>No records yet......</strong></p>-->
					<% } %>
				</div>
				</div>
					
									
</body>	
</html>							
